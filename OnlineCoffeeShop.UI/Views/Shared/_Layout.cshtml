<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineCoffeeShop.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineCoffeeShop.UI.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<body style="background-color: #fff5e9">
    <header class="mb-4 navbar-fixed-top">
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg border-bottom box-shadow mb-3" role="navigation" style="background-color: #fff5e9;">
            <div class="container-fluid">
                <div class="d-flex flex-row justify-content-between align-items-center w-100 px-5">
                    <div style="width: auto;">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        </ul>
                    </div>
                    @*<div style="width: auto;">
                        <ul class="navbar-nav">
                            @await Component.InvokeAsync("ShoppingCartSummary")
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>*@
                    <div style="width: auto;" class="d-flex flex-row">
                        <ul class="navbar-nav">
                            @await Component.InvokeAsync("ShoppingCartSummary")
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="w-100">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="container text-black fw-bold p-3 mt-3 mb-4">
            &copy; @DateTime.Now.ToString("yyyy") - Coffee Shop -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>