@model ShoppingCartViewModel

<div class="container mt-5 pt-5">
    <div class="mt-5">
        <h2 class="mt-5 mb-5 pt-5 fw-bolder">Your Shopping Cart</h2>

        @if (Model.ShoppingCart == null || Model.ShoppingCart.ShoppingCartItems.Count < 1)
        {
            <h4 mb-5 fw-bolder>There is nothing your shopping cart.</h4>
        }
        else
        {
            <div>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Selected amount</th>
                            <th>Pie</th>
                            <th class="text-right">Price</th>
                            <th class="text-right">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                        {
                            <tr>
                                <td class="text-left">@item.MenuItem.Name</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-right">@item.MenuItem.Price.ToString("c")</td>
                                <td class="text-right">
                                    @((item.Quantity * item.MenuItem.Price).ToString("c"))
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right">Total:</td>
                            <td class="text-right">
                                @Model.ShoppingCartTotal.ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>

                <div class="text-center">
                    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out now!</a>
                </div>
            </div>
        }
    </div>
</div>